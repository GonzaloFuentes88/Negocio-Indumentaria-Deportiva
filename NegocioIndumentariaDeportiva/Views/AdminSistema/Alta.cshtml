@model BBL.Models.Empleado


@{
    ViewData["Title"] = "Usuarios: ver";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

}
<head>
    <link rel="stylesheet" href="~/Content/styles.css"/>
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div><h3 class="text-center font-weight-light my-4">Crear usuario</h3></div>
                                <div class="card-body form-group mb-3">
                                    
                                    <div class="row mb-3">
                                        <div>
                                            <div class="mb-3 mb-md-0 ">

                                                <form action="@Url.Action("DarAlta", "AdminSistema")" method="post">
                                                    @Html.AntiForgeryToken()



                                                    <div class="row">

                                                        <div class="col-6">
                                                            @Html.LabelFor(m => m.Nombre)
                                                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                                                        </div>

                                                        <div class="col-6">
                                                            @Html.LabelFor(m => m.Apellido)
                                                            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <label class="mt-4 mb-0">Documento</label>

                                                        <!-- @Html.LabelFor(m => m.DNI)-->
                                                        @Html.TextBoxFor(m => m.DNI, new { @class = "form-control" })
                                                    </div>

                                                    <div class="mt-4 mb-0">
                                                        @Html.LabelFor(m => m.Email)
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                    </div>


                                                    <!--
                                                        falta el label para contraseña y rol


                                                    <div class="form-group mb-3">
                                                    <label for="exampleFormControlSelect1">Perfil</label>
                                                    <select class="form-control" id="exampleFormControlSelect1">
                                                        <option>Selecciona una opción</option>
                                                        <option>Administrativo</option>
                                                        <option>Administrador de sistema</option>
                                                        <option>Gerente</option>
                                                        <option>Vendedor</option>
                                                    </select>
                                                    </div>-->

                                                </form>

                                            </div>

                                            <!--  <button type="submit" class="btn btn-primary btn-block">Guardar</button> -->



                                            <div class="mt-4 mb-0">
                                                <div class="d-grid"><a class="btn btn-primary btn-block">Guardar</a></div>
                                            </div>
                                            
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
