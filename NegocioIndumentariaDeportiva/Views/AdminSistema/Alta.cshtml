@model Entitys.Entidades.Usuario

@{

    Layout = "~/Views/Shared/LayoutAdmin.cshtml";

}
<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/Content/styles.css" />
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div><h3 class="text-center font-weight-light my-4">Crear usuario</h3></div>
                                <div class="card-body form-group mb-3">

                                    <div class="row mb-3">
                                        <div>
                                            <div class="mb-3 mb-md-0 ">

                                                <form action="@Url.Action("DarAlta", "AdminSistema")" method="post">
                                                    @Html.AntiForgeryToken()



                                                    <div class="row">

                                                        <div class="col-6">
                                                            @Html.LabelFor(m => m.Empleado.Nombre)
                                                            @Html.TextBoxFor(m => m.Empleado.Nombre, new { @class = "form-control" })
                                                        </div>

                                                        <div class="col-6">
                                                            @Html.LabelFor(m => m.Empleado.Apellido)
                                                            @Html.TextBoxFor(m => m.Empleado.Apellido, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="row">

                                                        <div class="col-6">
                                                            @Html.LabelFor(m => m.Empleado.Email)
                                                            @Html.TextBoxFor(m => m.Empleado.Email, new { @class = "form-control" })
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label class="mt-4 mb-0">Documento</label>


                                                            @Html.TextBoxFor(m => m.Empleado.DNI, new { @class = "form-control" })
                                                        </div>

                                                        <div class="mt-4 mb-0 col-6">
                                                            @Html.LabelFor(m => m.Empleado.Telefono)
                                                            @Html.TextBoxFor(m => m.Empleado.Telefono, new { @class = "form-control" })
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="mt-4 mb-0 col-4">
                                                            @Html.LabelFor(m => m.Empleado.Direccion.CP)
                                                            @Html.TextBoxFor(m => m.Empleado.Direccion.CP, new { @class = "form-control" })
                                                        </div>

                                                        <div class="mt-4 mb-0 col-6">
                                                            @Html.LabelFor(m => m.Empleado.Direccion.Calle)
                                                            @Html.TextBoxFor(m => m.Empleado.Direccion.Calle, new { @class = "form-control" })
                                                        </div>

                                                        <div class="mt-4 mb-0 col-4">
                                                            @Html.LabelFor(m => m.Empleado.Direccion.Numero)
                                                            @Html.TextBoxFor(m => m.Empleado.Direccion.Numero, new { @class = "form-control" })
                                                        </div>
                                                    </div>


                                                    <div class="mt-4 mb-0">
                                                        @Html.LabelFor(m => m.Role)
                                                        @Html.DropDownListFor(m => m.Role.IdRole, new SelectList(ViewBag.roles, "IdRole", "Nombre"), "Seleccione un Rol", new { @class = "form-control" })
                                                    </div>


                                                    @Html.AntiForgeryToken()
                                                    <div class="mt-4 mb-0 col-6">

                                                        @Html.LabelFor(m => m.Username)
                                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })

                                                    </div>
                                                    <div class="mt-4 mb-0 col-6">

                                                        @Html.LabelFor(m => m.Password)
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                                                    </div>


                                                    <div class="mt-4 mb-0">
                                                        <button type="submit" class="btn btn-primary mt-2">Guardar</button>
                                                    </div>

                                                </form>

                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
