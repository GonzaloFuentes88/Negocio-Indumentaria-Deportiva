@model Entitys.Entidades.Usuario

@{
    ViewBag.Title = "VerUsuario";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/styles.css" />
</head>

<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div>
                                    <h3 class="text-center font-weight-light my-4">Usuario</h3>
                                </div>
                                <div class="card-body form-group mb-3">

                                    <div class="row mb-3">
                                        <div>
                                            <div class="mb-3 mb-md-0 ">

                                                <div class="row">
                                                    <div class="col-6">
                                                        @Html.LabelFor(m => m.Empleado.Legajo)
                                                        @Html.TextBoxFor(m => m.Empleado.Legajo, new { @class = "form-control", @readonly = "true" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-6">
                                                        @Html.LabelFor(m => m.Empleado.Nombre)
                                                        @Html.TextBoxFor(m => m.Empleado.Nombre, new { @class = "form-control", @readonly = "true" })
                                                    </div>
                                                    <div class="col-6">
                                                        @Html.LabelFor(m => m.Empleado.Apellido)
                                                        @Html.TextBoxFor(m => m.Empleado.Apellido, new { @class = "form-control", @readonly = "true" })
                                                    </div>
                                                </div>
                                                <div class="row">

                                                    <div class="col-6">
                                                        @Html.LabelFor(m => m.Empleado.Email)
                                                        @Html.TextBoxFor(m => m.Empleado.Email, new { @class = "form-control", @readonly = "true" })
                                                    </div>

                                                </div>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <label class="mt-4 mb-0">Documento</label>


                                                        @Html.TextBoxFor(m => m.Empleado.DNI, new { @class = "form-control", @readonly = "true" })
                                                    </div>

                                                    <div class="mt-4 mb-0 col-6">
                                                        @Html.LabelFor(m => m.Empleado.Telefono)
                                                        @Html.TextBoxFor(m => m.Empleado.Telefono, new { @class = "form-control", @readonly = "true" })
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="mt-4 mb-0 col-4">
                                                        @Html.LabelFor(m => m.Empleado.Direccion.CP)
                                                        @Html.TextBoxFor(m => m.Empleado.Direccion.CP, new { @class = "form-control", @readonly = "true" })
                                                    </div>

                                                    <div class="mt-4 mb-0 col-6">
                                                        @Html.LabelFor(m => m.Empleado.Direccion.Calle)
                                                        @Html.TextBoxFor(m => m.Empleado.Direccion.Calle, new { @class = "form-control", @readonly = "true" })
                                                    </div>

                                                    <div class="mt-4 mb-0 col-4">
                                                        @Html.LabelFor(m => m.Empleado.Direccion.Numero)
                                                        @Html.TextBoxFor(m => m.Empleado.Direccion.Numero, new { @class = "form-control", @readonly = "true" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="mt-4 mb-0 col-6">

                                                        @Html.LabelFor(m => m.Role)
                                                        @Html.TextBoxFor(m => m.Role.Nombre, new { @class = "form-control", @readonly = "true" })

                                                    </div>
                                                    <div class="mt-4 mb-0 col-6">

                                                        @Html.LabelFor(m => m.Username)
                                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "true" })

                                                    </div>
                                                </div>

                                                <div class="mt-4 mb-0">
                                                        <a class="btn btn-primary btn-block" @Html.ActionLink("Volver", "Vertodos")
                                                </div>

                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>