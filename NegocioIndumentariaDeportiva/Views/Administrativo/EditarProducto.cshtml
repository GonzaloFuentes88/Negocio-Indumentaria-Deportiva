@model Entitys.Entidades.Producto
@{
    Layout = "~/Views/Shared/_LayoutAdministrativo.cshtml";
}


<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/Content/styles.css" />
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div><h3 class="text-center font-weight-light my-4">Editar Producto</h3></div>
                                <div class="card-body form-group mb-3">

                                    <div class="row mb-3">
                                        <div>
                                            <div class="mb-3 mb-md-0 ">

                                                <form action="@Url.Action("DarAltaProducto", "Administrativo")" method="post">
                                                    @Html.AntiForgeryToken()

                                                    <div class="row">

                                                        <div class="mt-4 mb-0 col-6">
                                                            @Html.LabelFor(m => m.Descripcion)
                                                            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
                                                        </div>


                                                        @Html.AntiForgeryToken()

                                                        <div class="mt-4 mb-0 col-6">
                                                            @Html.LabelFor(m => m.Precio)
                                                            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control" })
                                                        </div>

                                                        <div class="mt-4 mb-0 col-6">
                                                            @Html.LabelFor(m => m.Cantidad)
                                                            @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control" })
                                                        </div>



                                                        @Html.HiddenFor(m => m.IdProducto)


                                                        <div class="mt-4 mb-0">
                                                            <button type="submit" class="btn btn-primary mt-2">Guardar</button>
                                                        </div>
                                                    </div>

                                                </form>

                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
