@model Entitys.Entidades.Talle

@{
    Layout = "~/Views/Shared/_LayoutAdministrativo.cshtml";
}

<h2>AgregarTalle</h2>

    
<div class="form-horizontal">
    <h4>Talle</h4>
    <hr />
    <form action="@Url.Action("RegistrarTalle", "Administrativo")" method="post">

        <div class="form-group">
            @Html.LabelFor(model => model.Talles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Talles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Talles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary mt-2">Guardar</button>
            </div>
        </div>
        </form>
</div>
}

<div>
    <a class="btn btn-primary btn-block" @Html.ActionLink("Volver", "AgregarProducto")
</div>
