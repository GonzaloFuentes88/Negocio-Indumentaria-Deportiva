@{
    ViewBag.Title = "RegistrarVenta";
    Layout = "~/Views/Shared/LayoutVendedor.cshtml";
}



<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-md border-0 rounded-lg">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Editar Producto</h3></div>
                                <div class="card-body">
                                    <form>

                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                <select class="form-control" name="marca" id="marca">
                                                    <option value="producto1">Adidas</option>
                                                    <option value="producto2">Nike</option>
                                                    <option value="producto2">Fila</option>
                                                </select>
                                                <label for="exampleFormControlSelect1">Marca</label>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <select class="form-control" name="tipo_producto" id="tipo_producto">
                                                        <option value="tipo_producto3">Remera</option>
                                                        <option value="tipo_producto4">Pantalon</option>
                                                        <option value="tipo_producto5">Buzo</option>
                                                        <option value="tipo_producto6">Campera</option>
                                                    </select>
                                                    <label for="producto">Producto:</label>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="row mb-3">
                                            
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" type="number" name="precio" id="precio" />
                                                    <label for="precio">Nuevo Precio</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><a class="btn btn-primary btn-block" asp-action="Index">Registrar</a></div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>


