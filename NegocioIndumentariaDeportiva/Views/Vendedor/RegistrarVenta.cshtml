@model BBL.Models.Venta
@{
    ViewBag.Title = "RegistrarVenta";
    Layout = "~/Views/Shared/LayoutVendedor.cshtml";
    m.Usuario = Empresa.UsuarioEnUso;
}

<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-md border-0 rounded-lg">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registrar Venta</h3></div>

                                <div class="card-body">


                                    <form method="post" action="@Url.Action("hacerVenta", "Controlador")">
                                        <div>
                                            <label for="IdVenta">ID de Venta:</label>
                                            @Html.TextBoxFor(m => m.IdVenta, new { id = "IdVenta" })
                                        </div>

                                        <div>
                                            <label for="Cliente">Cliente:</label>
                                            @Html.TextBoxFor(m => m.Cliente.Apellido, new { id = "Cliente_Apellido" })
                                            @Html.TextBoxFor(m => m.Cliente.Direccion, new { id = "Cliente_Direccion" })
                                            @Html.TextBoxFor(m => m.Cliente.DNI, new { id = "Cliente_DNI" })
                                            @Html.TextBoxFor(m => m.Cliente.Email, new { id = "Cliente_Email" })
                                            @Html.TextBoxFor(m => m.Cliente.Telefono, new { id = "Cliente_Telefono" })
                                        </div>

                                        <div> 
                                            <label for="Fecha">Fecha:</label>
                                            @Html.TextBoxFor(m => m.Fecha, new { id = "Fecha" })
                                        </div>

                                        <div>
                                            <label for="Total">Total:</label>
                                            @Html.TextBoxFor(m => m.Total)
                                        </div>
                                        <!-- Campos de cada detalle -->
                                        @for (int i = 0; i < Model.Detalles.Count; i++)
                                        {
                                            <div>
                                                <h4>Detalle @(i + 1)</h4>

                                                <!-- Campos del detalle -->
                                                @Html.HiddenFor(m => m.Detalles[i].Venta)  <!-- Campo oculto para mantener la referencia a la venta -->

                                                <div>
                                                    <label for="Detalles[@i].Cantidad">Cantidad:</label>
                                                    @Html.TextBoxFor(m => m.Detalles[i].Cantidad, new { id = "Detalles_" + i + "__Cantidad" })
                                                </div>

                                                <div>
                                                    <label for="Detalles[@i].Precio">Precio:</label>
                                                    @Html.TextBoxFor(m => m.Detalles[i].Precio, new { id = "Detalles_" + i + "__Precio" })
                                                </div>

                                                <div>
                                                    <label for="Detalles[@i].Producto">Producto:</label>
                                                    <input class="form-control" id="inputProducto" name="idProd" type="text" placeholder="Producto" />
                                                </div>
                                            </div>
                                        }

                                        <!-- Botón para agregar un nuevo detalle -->
                                        <input type="submit" value="Agregar Detalle" name="agregarDetalle" />

                                        <input type="submit" value="Registrar Venta" name="registrarVenta" />
                                    </form>




                                </div>
                                </div>

                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
