@model BBL.Models.Venta
@{
    ViewBag.Title = "RegistrarVenta";
    Layout = "~/Views/Shared/LayoutVendedor.cshtml";
    
}

<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-md border-0 rounded-lg">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registrar Venta</h3></div>

                                <div class="card-body">
                                    @using (Html.BeginForm("HacerVenta", "Vendedor", FormMethod.Post))
                                    {
                                        <div id="detallesContainer">
                             
                                            <div class="detalle">
                                                <div>
                                                    <label for="Detalle.Cantidad">Cantidad:</label>
                                                    @Html.TextBox("Cantidad", null, new { id = "Cantidad" })
                                                </div>
                                                <div>
                                                    <label for="Detalle.Precio">Precio:</label>
                                                    @Html.TextBox("Precio", null, new { id = "Precio" })
                                                </div>
                                                <div>
                                                    <label for="Detalle.Producto">ID Producto:</label>
                                                    @Html.TextBox("idProducto", null, new { id = "idProducto" })
                                                </div>
                       


                                                <input type="submit" value="Cargar Producto" class="cargarProducto" formaction="@Url.Action("CargarProducto", "Vendedor")" formmethod="get" />

                                            </div>

                                        </div>


                                        <input type="submit" value="Registrar Venta" />
                                    }
     


                                    @foreach (var detalle in Model.Detalles)
                                    {
                                        if (detalle.Producto != null)
                                        {
                                            <div>
                                                <p>Cantidad: @detalle.Cantidad</p>
                                                <p>Precio: @detalle.Precio</p>
                                                <p>Producto: @detalle.Producto</p>
                                            </div>
                                        }
                                    }


                                </div>
                                </div>

                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/js")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
